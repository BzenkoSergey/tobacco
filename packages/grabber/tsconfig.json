{
	"compilerOptions": {
		"declaration": true,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es6",
		"module": "commonjs",
		"lib": ["es2017", "dom"],
		"outDir": "./dist",
		"strict": false,
		"noImplicitAny": false,
		"strictNullChecks": false,
		"baseUrl": "./src",
		"rootDirs": ["."],

		"paths": {}
	},

	"exclude": [
		"node_modules",
		"dist"
	]
}